@model IEnumerable<BookStore.Models.Booking>

@{
    ViewData["Title"] = "My Order";
}

<h1>Books</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.Author)
            </th>
            <td>
                <strong>@Html.DisplayName("Date Booked")</strong>
            </td>
            <td>
                <strong>@Html.DisplayName("Date Returned")</strong>
            </td>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateBooked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateReturned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>                
                @if (item.Status == "Rented")
                {                    
                    @Html.ActionLink("Return", "ReturnBook", new { id = item.Id },
                    new { onclick = "return confirm('Do you wish to return this book?');" })
                }                                
            </td>
        </tr>
}
    </tbody>
</table>



